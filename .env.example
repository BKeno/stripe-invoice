# Environment Variables Reference
# These are managed in Railway dashboard, NOT in local .env files
# Use `railway run` to inject these variables locally

# Stripe API Keys
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Számlázz.hu API
SZAMLAZZ_API_KEY=your_api_key_here
SZAMLAZZ_API_URL=https://www.szamlazz.hu/szamla/
SZAMLAZZ_E_INVOICE=true
SZAMLAZZ_ISSUER_NAME=Your Company Name
SZAMLAZZ_BANK=Bank Name
SZAMLAZZ_BANK_ACCOUNT=12345678-12345678-12345678

# Google Sheets
GOOGLE_SHEETS_ID=your_spreadsheet_id
GOOGLE_SERVICE_ACCOUNT_JSON={"type":"service_account","project_id":"..."}

# Server
PORT=8080
NODE_ENV=development

# Admin endpoints (localhost-only with API key)
ADMIN_API_KEY=generate-secure-random-string-here

# Development/Testing
MOCK_WEBHOOK_HANDLER=false
